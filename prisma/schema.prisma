generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model GuestBook {
  id           Int      @id @default(autoincrement())
  name         String
  relationship String?
  message      String
  to           String   // "신랑" 또는 "신부"
  password     String
  createdAt    DateTime @default(now())
  
  @@map("guest_book")
}
